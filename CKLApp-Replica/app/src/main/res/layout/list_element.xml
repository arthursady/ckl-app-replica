<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:textSize="16sp"
            android:layout_marginLeft="16dp"
            tools:text="Nome na Lista"
            android:layout_alignBaseline="@+id/list_element_menu"
            android:layout_toLeftOf="@+id/list_element_menu"
            android:layout_alignBottom="@+id/list_element_menu"/>

        <Button
            android:id="@+id/list_element_menu"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_indicator_dots"/>

    <View
        android:id="@+id/password_underline"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginTop="45dp"
        android:background="@color/silver"/>

</RelativeLayout>