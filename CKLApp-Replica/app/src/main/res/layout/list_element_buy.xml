<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/bullet_point"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_gravity="center"
            android:layout_marginRight="25dp"
            android:layout_toLeftOf="@+id/name"
            android:layout_centerVertical="true"
            android:background="@drawable/bullet_point"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:textSize="16sp"
            tools:text="Nome na Lista"
            android:layout_alignBaseline="@+id/list_element_menu"
            android:layout_toLeftOf="@+id/list_element_menu"
            android:layout_alignBottom="@+id/list_element_menu"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/list_element_menu"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:background="@drawable/ic_indicator_dots"/>

        <View
            android:id="@+id/list_underline"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="25dp"
            android:background="@color/silver"/>
</RelativeLayout>